{% extends '::base.html.twig' %}
{% block title %} Lista de Fabricantes {% endblock %}
{% block body %}
	<div class="container">
		<h2 class="page-header">Lista de Fabricantes</h2>
		<div class="container">
			<div class="navbar-text">
				<a class="btn btn-primary" href="{{ path('new_fabricante') }}">Novo Fabricante</a>
			</div>
			<div class="container">
				<table class="table table-bordered table-striped table-responsive">
				<tr>
					<th>Id</th>
					<th>Nome</th>
					<th>Carros</th>
					<th>Ação</th>
				</tr>
				{% for fabricante in fabricantes%}
					<tr>
						<td>{{fabricante.id}}</td>
						<td>{{fabricante.nome}}</td>
						<td>
							<ul>
								{% for carro in fabricante.carros %}
									<li>{{carro.modelo}}</li>
								{% endfor %}
							</ul>
						</td>
						<td><a class="btn btn-success" href="{{ path('fabricante_edit', {'id':fabricante.id}) }}">Editar</a>
						<a class="btn btn-danger" href="{{ path('fabricante_delete', {'id':fabricante.id}) }}">Deletar</a></td>
					</tr>
				{% endfor %}
			</table>
			</div>
			
			<div class="navbar-text">
				<a class="btn btn-success" href="{{ path('homepage') }}">Página Incial</a>
			</div>
		</div>
	</div>
{% endblock%}